{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist/1.x",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types",
      "src/types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.js",
    "build/**/*.js",
    ".eslintrc.cjs",
    "*.js",
  ],
  "exclude": [
    "demo/*",
  ],
}
